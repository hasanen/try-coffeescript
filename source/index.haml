%html.no-js(lang="en")
  %head
    %meta(charset="utf-8")
    %title Try CoffeeScript
    %meta(name="description" content="")
    %meta(name="viewport" content="width=device-width, initial-scale=1")
    %link(href="/favicon.ico" shortcut="shortcut icon")
    %link(href="stylesheets/screen.css" rel="stylesheet")
  %body

    %article
      %header
        -#
          %a(href="https://github.com/polarblau/try-coffeescript" title="Source code on Github")
