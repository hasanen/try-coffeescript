        %button.fullscreen Fullscreen

      %section#source
        .editor
        .errors
      %section#output
        .editor
        .console
        .errors
        %button.run Execute

    %script(src="javascripts/vendor/jquery.min.js")
    %script(src="javascripts/vendor/ace/ace.js")
    %script(src="javascripts/vendor/coffeescript.min.js")
    %script(src="javascripts/vendor/fullscreen.min.js")
